<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentreseller.HistoryTransactionFragment">

    <FrameLayout
        android:id="@+id/frame_top_transaction"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/bg_history_atas"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints">
    </FrameLayout>

    <TextView
        android:id="@+id/title_history_transaction"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_title"
        android:padding="6dp"
        android:text="History Transaction"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_top_transaction"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_history_transaction">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history_transaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>